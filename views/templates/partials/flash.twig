
{% for msg in flash() %}

    <div class="container-fluid" id="flashWrap" style="padding: 0px !important; margin: 0px auto !important;">
        <div class="container" id="flash" style="padding: 0px !important; margin: 25px auto !important; width: 100% !important;">
            <div class="row">

                <div class="col alert alert-info alert-dismissible fade show" role="alert" style="margin: 0px auto !important; width: 100% !important;">

                    <p class="h4 alert-heading font-weight-bold">Message: </p>

                    <p class="text-left">
                        {{ msg.0 }}
                    </p>

                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>

            </div>
        </div>
    </div>

{% endfor %}
